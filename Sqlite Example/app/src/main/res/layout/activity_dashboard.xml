<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Dashboard">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">


    <TextView

        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:text="Dashboard"
        android:textColor="#FFC107"
        android:textSize="45dp" />

    <ImageButton
        android:layout_weight="0.2"
        android:layout_width="30dp"
        android:onClick="mapss"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:layout_height="30dp"

        android:background="@drawable/m"/>

</LinearLayout>

    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"

            android:scaleY="4" />
    <TextView
            android:id="@+id/counter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Donors Count : "
        android:textColor="#FFC107"
        android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="4dp">


        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="120dp"
            android:gravity="center"
            android:text="Stock"
            android:textColor="#FFC107"
            android:textSize="30dp" />



        <TextView
            android:id="@+id/Pumps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#00BCD4"
            android:gravity="center"
            android:text="All Blood Types"
            android:textSize="20dp" />



        <Button
            android:id="@+id/button"
            android:onClick="stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="110dp"
            android:backgroundTint="#918A8A"
            android:text="Check" />


    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view3"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            app:cardCornerRadius="4dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="120dp"
                android:gravity="center"
                android:text="Add Donor"
                android:textColor="#FFC107"
                android:textSize="30dp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Add a New Donor"
                android:textSize="20dp" />



            <Button
                android:onClick="add_donor"
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="110dp"
                android:backgroundTint="#918A8A"
                android:text="Add" />


        </androidx.cardview.widget.CardView>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="4dp">


        <TextView
            android:id="@+id/info_text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="120dp"
            android:gravity="center"
            android:text="Specific"
            android:textColor="#FFC107"
            android:textSize="30dp" />



        <TextView
            android:id="@+id/Pumps2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Modify a specific donor"
            android:textSize="20dp" />



        <Button
            android:id="@+id/button2"
            android:onClick="specific"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="110dp"
            android:backgroundTint="#918A8A"
            android:text="Check" />

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="4dp">



            <TextView
                android:id="@+id/info_text2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:text="Compability"
                android:textColor="#FFC107"
                android:textSize="30dp" />


            <TextView
                android:id="@+id/textview4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Need help ?"
                android:textSize="25dp" />



            <Button
                android:id="@+id/button4"
                android:onClick="Information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="110dp"
                android:backgroundTint="#918A8A"
                android:text="GO" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


